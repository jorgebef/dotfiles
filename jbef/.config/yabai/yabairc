#!/usr/bin/env sh

# for this to work you must configure sudo such that
# it will be able to run the command without password
#
# see this wiki page for information:
#  - https://github.com/koekeishiya/yabai/wiki/Installing-yabai-(latest-release)#configure-scripting-addition

sudo yabai --load-sa
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"

# Use karabiner elements to remap right Command key to function key

# global settings
yabai -m config \
  mouse_follows_focus off \
  focus_follows_mouse off \
  window_origin_display default \
  window_placement second_child \
  window_topmost off \
  window_shadow off \
  window_animation_duration 0.0 \
  window_opacity_duration 0.0 \
  window_zoom_persist off \
  window_opacity off \
  active_window_opacity 1.0 \
  normal_window_opacity 1.0 \
  insert_feedback_color 0xffd75f5f \
  split_ratio 0.50 \
  split_type auto \
  auto_balance off \
  top_padding 10 \
  bottom_padding 10 \
  left_padding 10 \
  right_padding 10 \
  window_gap 14 \
  layout bsp \
  mouse_modifier ctrl \
  mouse_action1 move \
  mouse_action2 resize \
  mouse_drop_action swap

# Make all windows float by default
yabai -m rule --add app=".*" manage=off

# Manage these windows only
yabai -m rule --add app="^Arc$" manage=on
# yabai -m rule --add app="^Adobe.*" manage=on
# yabai -m rule --add app="^Google Chrome$" manage=on
# yabai -m rule --add app="^WezTerm$" manage=on
yabai -m rule --add app="^Ghostty$" manage=on
yabai -m rule --add app="^Ghostty$" title="^.*(Update|Updating).*$" manage=off
yabai -m rule --add app="^Firefox Nightly$" manage=on
yabai -m rule --add app="^Zen Browser$" manage=on
yabai -m rule --add app="^Firefox Nightly$" title="^Firefox Nightly$" manage=off

echo "yabai configuration loaded.."
