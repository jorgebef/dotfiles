simplified_ui true
tab_frames false
pane_frames false
default_mode "locked"

ui {
    pane_frames {
        hide_session_name true
    }
}

 layout {
  pane split_direction="vertical" {
    pane
    }

    pane size=1 borderless=true {
      hide_frame_for_single_pane "true"

  }
}

